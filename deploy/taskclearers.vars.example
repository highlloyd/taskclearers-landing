# Nomad job variables for taskclearers
# Copy to taskclearers.vars and fill in your values
# Deploy with: nomad job run -var-file=deploy/taskclearers.vars deploy/taskclearers.nomad.hcl

image_tag = "latest"

# Required - generate a secure random string
jwt_secret = "your-secure-jwt-secret-here"

# Optional - email configuration
admin_email_domain  = ""
resend_api_key      = ""
notification_email  = ""

# Optional - Azure AD / Office 365 integration
azure_client_id     = ""
azure_tenant_id     = ""
azure_client_secret = ""
o365_shared_mailbox = ""
